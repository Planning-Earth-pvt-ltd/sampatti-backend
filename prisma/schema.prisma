generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum KYCStatus {
  PENDING
  APPROVED
  REJECTED
}

enum PropertyType {
  Residential
  Commercial
  Industrial
  Land
}

enum PropertyStatus {
  Active
  Listed
  Sold
}

model User {
  id            String    @id @default(cuid()) @map("userId")  //p_key
  fullName      String
  phoneNumber   String    @unique
  email         String?   @unique
  kycStatus     KYCStatus @default(PENDING)
  isKycVerified Boolean   @default(false)
  createdBy     String    @default("user")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  T_id                                             //f_key
  
  
  Token         Token[]

  @@map("users")
}

model Token {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("user_tokens")
}

model Property {
  p_id              String         @id @default(cuid()) @map("propertyId")  p_key
  title             String
  description       String
  address           String
  city              String
  state             String
  propertyType      PropertyType
  status            PropertyStatus
  currentValuation  Float
  totalAreaSqft     Float
  PricePerSqFt      Float
  TotalTokens  Float
  ownerUserId       String           //f_key
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  T_id              String           //p_key
  PricePerSqFt      Number
  SqFtAreaPerToken
  PricePerToken     Number
  Token
  @@index([ownerUserId])
  @@map("properties")
}


currentValuation/totalAreaSqft=PricePerSqFt
totalAreaSqft/TotalTokens=SqFtAreaPerToken
SqFtAreaPerToken*PricePerSqFt=PricePerToken


